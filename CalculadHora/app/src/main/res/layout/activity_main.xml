<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <EditText
        android:id="@+id/horaSaidaAlmocoID"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="31dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/zerohora"
        android:focusable="false"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/horaRetornoAlmocoID"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" tools:targetApi="o"/>

    <EditText
        android:id="@+id/horaRetornoAlmocoID"
        android:layout_width="60dp"
        android:layout_height="43dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/zerohora"
        android:focusable="false"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="parent" tools:targetApi="o"/>

    <EditText
        android:id="@+id/pausaRetornoID"
        android:layout_width="64dp"
        android:layout_height="39dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:autofillHints=""
        android:ems="10"
        android:focusable="false"
        android:hint="@string/zerohora"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="@+id/pausaSaidaID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pausaSaidaID"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="1.0"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/pausaSaidaID"
        android:layout_width="65dp"
        android:layout_height="41dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:autofillHints=""
        android:ems="10"
        android:focusable="false"
        android:hint="@string/zerohora"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="@+id/botaoPausaID"
        app:layout_constraintEnd_toStartOf="@+id/pausaRetornoID"
        app:layout_constraintStart_toEndOf="@+id/botaoPausaID"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="18dp"
        android:text="@string/label1"
        android:textSize="@dimen/tamanho_app"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/horaEntradaID"
        app:layout_constraintTop_toTopOf="@+id/guideline2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="83dp"
        android:text="@string/label2"
        android:textSize="@dimen/tamanho_app"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginBottom="7dp"
        android:text="@string/label3"
        android:textSize="@dimen/tamanho_app"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/horaRetornoAlmocoID"
        app:layout_constraintStart_toStartOf="@+id/guideline" />

    <Button
        android:id="@+id/botaoPausaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="@string/bt1"
        app:layout_constraintEnd_toStartOf="@+id/pausaSaidaID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horaRetornoAlmocoID" />

    <Button
        android:id="@+id/botaoCalcID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="58dp"
        android:layout_marginBottom="54dp"
        android:text="@string/btcalc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/botaoPausaID"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="153dp"
        android:layout_height="21dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:text="@string/label4"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/resultadoPausaID"
        app:layout_constraintEnd_toEndOf="@+id/botaoPausaID"
        app:layout_constraintStart_toStartOf="@+id/botaoCalcID"
        app:layout_constraintTop_toTopOf="@+id/resultadoPausaID" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="224dp"
        android:layout_marginLeft="224dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="43dp"
        android:text="@string/saida"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/botaoPausaID"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="49dp"
        android:layout_height="23dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:text="@string/retorno"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/pausaSaidaID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/resultadoSaidaID"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="54dp"
        android:text="@string/zerohora"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/botaoCalcID"
        app:layout_constraintTop_toTopOf="@+id/resultadoPausaID"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/resultadoPausaID"
        android:layout_width="57dp"
        android:layout_height="36dp"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginBottom="55dp"
        android:text="@string/zerohora"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/botaoCalcID"
        app:layout_constraintEnd_toEndOf="@+id/pausaRetornoID"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/botaoCalcID"
        app:layout_constraintTop_toTopOf="@+id/pausaRetornoID"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <EditText
        android:id="@+id/horaEntradaID"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="31dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="31dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="@string/zerohora"
        android:focusable="false"
        android:inputType="time"
        app:layout_constraintBottom_toBottomOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="@+id/horaSaidaAlmocoID"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView" tools:targetApi="o"/>

</android.support.constraint.ConstraintLayout>