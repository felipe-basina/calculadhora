<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cinza"
    tools:context=".SaidaCalculada">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/botaoCalcID"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/bg_green"
        android:text="@string/btcalc"
        android:textColor="@color/cor_fonte"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoSaidaID"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/resultadoSaidaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="312dp"
        android:autofillHints=""
        android:background="@color/bg_texto"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/zerohora"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@color/cor_fonte"
        android:textSize="@dimen/caixa_hora"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="o" />

    <Button
        android:id="@+id/botaoLimparID"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/buttons_red"
        android:text="@string/botao_limpar"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botaoCalcID" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/bg_texto"
        android:padding="@dimen/appbar_padding_top"
        android:text="@string/label1"
        android:textColor="@color/cor_fonte"
        app:layout_constraintBaseline_toBaselineOf="@+id/resumoEntradaID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resumoEntradaID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/bg_texto"
        android:padding="@dimen/appbar_padding_top"
        android:text="@string/zerohora"
        android:textColor="@color/cor_fonte"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/resumoAlmocoSID"
        app:layout_constraintStart_toEndOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/bg_texto"
        android:padding="@dimen/appbar_padding_top"
        android:text="@string/label2"
        android:textColor="@color/cor_fonte"
        app:layout_constraintBaseline_toBaselineOf="@+id/resumoAlmocoSID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resumoAlmocoSID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/bg_texto"
        android:padding="@dimen/appbar_padding_top"
        android:text="@string/zerohora"
        android:textColor="@color/cor_fonte"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/resumoAlmocoRID"
        app:layout_constraintStart_toStartOf="@+id/resumoEntradaID" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:background="@color/bg_texto"
        android:padding="@dimen/appbar_padding_top"
        android:text="@string/label2"
        android:textColor="@color/cor_fonte"
        app:layout_constraintBaseline_toBaselineOf="@+id/resumoAlmocoRID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/resumoAlmocoRID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@color/bg_texto"
        android:padding="@dimen/appbar_padding_top"
        android:text="@string/zerohora"
        android:textColor="@color/cor_fonte"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/resultadoSaidaID"
        app:layout_constraintStart_toStartOf="@+id/resumoAlmocoSID" />

</android.support.constraint.ConstraintLayout>