<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cinza"
    tools:context=".SaidaCalculadaCombo">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/botaoCalcHTIDCombo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/bg_green"
        android:padding="5dp"
        android:text="@string/calcular_hora_trabalhada"
        android:textColor="@color/cor_fonte"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4Combo"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/alarmeIDCombo"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/bg_green"
        android:text="@string/criar_alarme"
        android:textColor="@color/cor_fonte"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineCombo"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/botaoCalcIDCombo"
        android:layout_width="275dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttons"
        android:backgroundTint="@color/bg_green"
        android:text="@string/btcalc"
        android:textColor="@color/cor_fonte"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoSaidaIDCombo"
        tools:targetApi="lollipop" />

    <EditText
        android:id="@+id/resultadoSaidaIDCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autofillHints=""
        android:background="@color/bg_texto"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/zerohora"
        android:inputType="time"
        android:textAlignment="center"
        android:textColor="@color/cor_fonte"
        android:textSize="@dimen/caixa_hora"
        app:layout_constraintBottom_toTopOf="@+id/guidelineCombo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:targetApi="o" />

    <android.support.constraint.Guideline
        android:id="@+id/guidelineCombo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/bg_texto"
        android:padding="5dp"
        app:layout_constraintBottom_toTopOf="@+id/resultadoSaidaIDCombo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView8Combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/label1"
            android:textColor="@color/cor_fonte"
            app:layout_constraintBottom_toTopOf="@+id/textView16Combo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/resumoEntradaCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="8dp"
            android:text="@string/zerohora"
            android:textColor="@color/cor_fonte"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/resumoAlmocoSCombo"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView16Combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="7dp"
            android:text="@string/label2"
            android:textColor="@color/cor_fonte"
            app:layout_constraintBottom_toTopOf="@+id/textView18Combo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView18Combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/label3"
            android:textColor="@color/cor_fonte"
            app:layout_constraintBottom_toTopOf="@+id/textView20Combo"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView20Combo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="1dp"
            android:text="@string/pausas_extras"
            android:textColor="@color/cor_fonte"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/resumoAlmocoRCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="8dp"
            android:text="@string/zerohora"
            android:textColor="@color/cor_fonte"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/resumoPausasExtrasCombo"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/resumoPausasExtrasCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="1dp"
            android:text="@string/zerohora"
            android:textColor="@color/cor_fonte"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/resumoAlmocoSCombo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:layout_marginBottom="7dp"
            android:text="@string/zerohora"
            android:textColor="@color/cor_fonte"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/resumoAlmocoRCombo"
            app:layout_constraintEnd_toEndOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/textView4Combo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/ou"
        android:textColor="@color/cor_fonte"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alarmeIDCombo" />

</android.support.constraint.ConstraintLayout>